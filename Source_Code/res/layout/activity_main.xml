<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.barrelracing.MainActivity" >

        <ImageView
        android:id="@+id/imagev2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:contentDescription="Home Screen"
        android:src="@drawable/logo" />

        <ImageButton
            android:id="@+id/startImageButton"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="Start Image Button"
            android:src="@drawable/playbt" />
        <ImageButton
            android:id="@+id/hbt"
            style="@style/AppBaseTheme"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@null"
            android:contentDescription="Start Image Button"
            android:src="@drawable/helpbt" />

        <EditText
            android:id="@+id/linlayout"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:ems="10"
            android:hint="@string/name"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:textColor="@color/TextColor"
            android:textSize="15sp" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textViewRiderSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="30"
            android:paddingTop="10dp"
            android:text="@string/speed"
            android:textColor="@color/TextColor"
            android:textSize="18sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:max="2"
        android:progress="0" />

</LinearLayout>
